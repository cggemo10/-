<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_bg_base"
                tools:context="com.jayangche.carja.activity.FeedbackActivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:imeOptions="actionNext"
        android:gravity="center_vertical"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/ed_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_feed_back_title"
        android:singleLine="true"
        android:layout_below="@id/titlebar"
        android:background="@android:color/white"
        android:padding="8dp"/>

    <android.support.v7.widget.AppCompatButton
        android:text="@string/str_commit"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/c_style_red"
        android:id="@+id/btn_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:imeOptions="actionDone"
        android:padding="8dp"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/hint_feed_back_content"
        android:gravity="left"
        android:singleLine="false"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/ed_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_feedback_commit"
        android:layout_below="@id/ed_feedback_title"
        android:background="@android:color/white"
        android:minHeight="60dp"/>


</RelativeLayout>
