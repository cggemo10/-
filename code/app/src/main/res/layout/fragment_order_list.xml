<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.rrja.carja.fragment.orderlist.OrderListFragment">

    <LinearLayout
        android:id="@+id/ll_order_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_label_unpay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="未支付"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/txt_label_payed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="已支付"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/txt_label_finish_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="已完成"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/txt_label_cancel_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="已取消"
            android:textColor="@android:color/secondary_text_light"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_order_tag"
        android:layout_marginTop="5dp"
        android:background="@color/c_bg_base"/>

    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/txt_order_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_order_tag"
        android:background="@color/c_bg_base"
        android:gravity="center"
        android:text="暂无订单"/>

</RelativeLayout>
