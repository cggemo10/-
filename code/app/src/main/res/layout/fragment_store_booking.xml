<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/c_bg_base"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             tools:context="com.rrja.carja.fragment.store.StoreBookingFragment">

    <RelativeLayout
        android:id="@+id/rl_book_name"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="联系人"
            android:layout_margin="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_book_user_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_del"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/ed_store_book_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_name_del"
            android:layout_toRightOf="@id/txt_label_name"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_book_user"
            android:imeOptions="actionNext"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@android:color/secondary_text_light"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_book_name"
        android:id="@+id/rl_book_tel"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="联系电话"
            android:layout_margin="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_book_tel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_del"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/ed_store_book_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_name_del"
            android:layout_toRightOf="@id/txt_label_name"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_book_tel"
            android:imeOptions="actionNext"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@android:color/secondary_text_light"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_book_tel"
        android:id="@+id/rl_book_time"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="预约时间"
            android:layout_margin="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/txt_store_book_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/string_book_time"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_book_time"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="填写位置"
            android:layout_margin="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_book_area_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_del"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/ed_store_book_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_name_del"
            android:layout_toRightOf="@id/txt_label_name"
            android:gravity="right|center_vertical"
            android:hint="@string/hint_book_area"
            android:imeOptions="actionDone"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@android:color/secondary_text_light"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"/>

    </RelativeLayout>


    <android.support.v7.widget.AppCompatButton
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/c_style_red"
        android:id="@+id/btn_conform_booking"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="@string/title_store_conform_add"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>
