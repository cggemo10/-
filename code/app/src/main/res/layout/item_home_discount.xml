<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="center"
        android:src="@drawable/demo_product_img"
        android:id="@+id/item_discount_spic"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_toRightOf="@id/item_discount_spic"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:id="@+id/item_discount_stitle"
        android:text="车载电器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="自营精选车品"
        android:singleLine="false"
        android:id="@+id/item_discount_sdetal"
        android:layout_below="@id/item_discount_stitle"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/item_discount_stitle"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>