<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="match_parent"
             tools:context="com.rrja.carja.fragment.orderlist.OrderDetalFragment">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/txt_lable_order"
            android:text="订单详情"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="订单编号："
            android:id="@+id/txt_order_num"
            android:textColor="@android:color/secondary_text_light"
            android:layout_below="@id/txt_lable_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignBaseline="@id/txt_order_num"
            android:text="11223344"
            android:id="@+id/txt_order_num_content"
            android:textColor="@android:color/secondary_text_light"
            android:layout_toRightOf="@+id/txt_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txt_order_num"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:text="联系人："
            android:id="@+id/txt_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:maxLength="10"
            android:layout_toRightOf="@id/txt_relative"
            android:layout_alignBaseline="@id/txt_relative"
            android:textColor="@android:color/secondary_text_light"
            android:text="hahahhahahhah"
            android:id="@+id/txt_relative_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/txt_relative_content"
            android:layout_marginLeft="20dp"
            android:layout_alignBaseline="@id/txt_relative"
            android:textColor="@android:color/secondary_text_light"
            android:text="车牌："
            android:id="@+id/txt_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignBaseline="@id/txt_plat"
            android:layout_toRightOf="@id/txt_plat"
            android:textColor="@android:color/secondary_text_light"
            android:text="yafadfadfasdfasdf"
            android:id="@+id/txt_plat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="手机号码："
            android:layout_below="@id/txt_relative"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/txt_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@android:color/secondary_text_light"
            android:layout_toRightOf="@id/txt_tel"
            android:text="123456789012"
            android:layout_alignBaseline="@id/txt_tel"
            android:id="@+id/txt_tel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_below="@id/txt_tel"
            android:id="@+id/txt_loc"
            android:text="所在位置："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignBaseline="@id/txt_loc"
            android:layout_toRightOf="@id/txt_loc"
            android:text="aabbccdd"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/txt_loc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_loc"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_marginBottom="10dp"
            android:text="总价格："
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/txt_amount"
            android:layout_alignBaseline="@id/txt_amount"
            android:text="10.50"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/txt_amount_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>
