<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/icon_menu2"
        android:id="@+id/img_forum_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/img_forum_avatar"
        android:layout_toRightOf="@id/img_forum_avatar"
        android:text="养车小妞"
        android:id="@+id/txt_forum_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@id/txt_forum_user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@id/txt_forum_user_name"
        android:layout_alignTop="@id/txt_forum_user_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_alignLeft="@id/txt_forum_user_name"
        android:layout_below="@id/txt_forum_user_name"
        android:layout_marginTop="5dp"
        android:text="15-03-01 13:18:22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_forum_comtent"
        android:singleLine="false"
        android:layout_alignLeft="@id/img_forum_avatar"
        android:layout_below="@id/img_forum_avatar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>