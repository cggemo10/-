<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/icon_menu2"
        android:id="@+id/img_forum_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/img_forum_avatar"
        android:layout_toRightOf="@id/img_forum_avatar"
        android:text="养车小妞"
        android:id="@+id/txt_forum_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@id/txt_forum_user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@id/txt_forum_user_name"
        android:layout_alignTop="@id/txt_forum_user_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_alignLeft="@id/txt_forum_user_name"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/txt_forum_user_name"
        android:layout_marginTop="5dp"
        android:text="15-03-01 13:18:22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_forum_comtent"
        android:singleLine="false"
        android:layout_below="@id/img_forum_avatar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_forum_imgs"
        android:layout_below="@id/txt_forum_comtent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="center"
            android:id="@+id/img_forum_img0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1"
            android:id="@+id/txt_forum_comment_count"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/txt_forum_comment_count"
            android:src="@drawable/ic_forum_comment"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@id/txt_forum_comment_count"
            android:id="@+id/img_forum_common_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_forum_imgs"
        android:id="@+id/ll_forum_last_comment"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_forum_last_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:singleLine="false"
            android:id="@+id/txt_forum_last_comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>