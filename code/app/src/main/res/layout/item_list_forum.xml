<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    card_view:cardBackgroundColor="@color/cardview_dark_background"
                                    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_forum_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/touxiang"/>

        <TextView
            android:id="@+id/txt_forum_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_forum_avatar"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_forum_avatar"
            android:text="养车小妞"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_forum_user_name"
            android:layout_alignTop="@id/txt_forum_user_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/txt_forum_user_name"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_forum_user_name"
            android:layout_below="@id/txt_forum_user_name"
            android:layout_marginTop="5dp"
            android:text="15-03-01 13:18:22"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/txt_forum_comtent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_forum_avatar"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="asdfasdlkfajsdklfjaksldfjasdjflkasjdfklasjfdlkasjdfkalsjfdkalaskdjfkalsjdfkal;sdjfklasfjk"
            android:textColor="@android:color/secondary_text_light"/>

        <RelativeLayout
            android:id="@+id/rl_forum_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_forum_comtent"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_forum_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/demo_bbs_img"/>

            <TextView
                android:id="@+id/txt_forum_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_forum_img"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textColor="@android:color/secondary_text_light"/>

            <ImageView
                android:id="@+id/img_forum_common_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_forum_img"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/txt_forum_comment_count"
                android:src="@drawable/ic_forum_comment"/>
        </RelativeLayout>

