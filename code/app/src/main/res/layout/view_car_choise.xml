<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:src="@drawable/demo_car_brand"
        android:id="@+id/img_car_ic"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_car_platnm"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginTop="15dp"
        android:text="闽A 123456"
        android:layout_toRightOf="@id/img_car_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_car_brand"
        android:textColor="@android:color/primary_text_light"
        android:layout_below="@id/txt_car_platnm"
        android:layout_marginTop="15dp"
        android:text="宝马 123456"
        android:layout_toRightOf="@id/img_car_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/c_style_red"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <ImageView
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>