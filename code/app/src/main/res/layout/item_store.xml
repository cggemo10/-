<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="8dp">

    <ImageView
        android:id="@+id/img_store_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txt_store_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_store_pic"
        android:layout_alignParentRight="true"
        android:text="0.79km"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/txt_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_store_pic"
        android:text="日日建安滨北店"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/txt_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_store_name"
        android:layout_below="@id/txt_store_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/txt_store_distance"
        android:singleLine="false"
        android:text="思明区金尚禹州花园三期"
        android:textColor="@android:color/secondary_text_light"/>

</RelativeLayout>