<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order_nm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编码："
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_order_nm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_order_nm_label"
                android:text="1000123"
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_order_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_order_nm_label"
                android:text="联系人："
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_order_owner_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/txt_order_owner"
                android:layout_toRightOf="@id/txt_order_owner"
                android:text="hahaha"
                android:textColor="@android:color/secondary_text_light"/>


            <TextView
                android:id="@+id/txt_order_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/txt_order_owner"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/txt_order_owner_content"
                android:text="车牌："
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_order_car_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/txt_order_car"
                android:layout_toRightOf="@id/txt_order_car"
                android:text="闽A 12345"
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_sync_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="未付款"
                android:textColor="@color/c_style_red"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_order_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/demo_car_brand"/>

            <TextView
                android:id="@+id/txt_order_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/img_order_logo"
                android:maxLines="3"
                android:singleLine="false"
                android:text="商品:aaaa 服务:bbb"
                android:textColor="@android:color/secondary_text_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textColor="@android:color/secondary_text_light"/>

            <TextView
                android:id="@+id/txt_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_order_amount_label"
                android:text="123元"
                android:textColor="@android:color/secondary_text_light"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_pay_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="付款"
                android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>